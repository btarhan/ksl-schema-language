version 0.1
module inventory
import iam

public type host {
    private relation workspace: [ExactlyOne workspace]
    
    @iam.workspace_permission(full_name:'inventory_hosts_read')
    public relation read: workspace.inventory_hosts_read
    @iam.workspace_permission(full_name:'inventory_hosts_write')
    public relation write: workspace.inventory_hosts_write
}